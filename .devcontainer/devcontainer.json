{
  "name": "CLARA-SSoT Development",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.isort",
        "Google.gemini-code-assist",
        "ms-azuretools.vscode-docker",
        "iterative.dvc",
        "GitHub.copilot",
        "eamodio.gitlens"
      ],
      "settings": {
        "python.defaultInterpreter": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "python.terminal.activateEnvironment": true,
        "editor.formatOnSave": true,
        "files.autoSave": "afterDelay",
        "geminicodeassist.project": "",
        "geminicodeassist.enableCloudAICompanion": true
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "postStartCommand": "bash .devcontainer/post-start.sh",
  "remoteUser": "vscode",
  "mounts": [
    "source=clara-ssot-dvc-cache,target=/home/vscode/.dvc/cache,type=volume",
    "source=clara-ssot-gcloud-config,target=/home/vscode/.config/gcloud,type=volume",
    "source=clara-ssot-vscode-extensions,target=/home/vscode/.vscode-server/extensions,type=volume"
  ],
  "runArgs": [
    "--gpus", "all",
    "--network=host",
    "--env-file",
    ".env"
  ],
  "forwardPorts": [
    8000,
    8501
  ]
}